<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C2E7E3">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:src="@drawable/join"
            android:layout_gravity="center"
            />



        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_margin="5dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="아이디 :     "
                android:fontFamily="@font/kor2"/>
            <EditText
                android:id="@+id/RegiEdtId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="textPersonName"
                android:padding="10dp" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_margin="5dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="비밀번호 :  "
                android:fontFamily="@font/kor2"/>
            <EditText
                android:id="@+id/RegiEdtPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:inputType="textPassword"
                android:padding="10dp" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_margin="5dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="닉네임 :     "
                android:fontFamily="@font/kor2"/>
            <EditText
                android:id="@+id/RegiEdtNicname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_margin="5dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="이메일 :     "
                android:fontFamily="@font/kor2"/>
            <EditText
                android:id="@+id/RegiEdtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_margin="5dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="성별 :                  "
                android:fontFamily="@font/kor2"/>
            <RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/rgGender">
                <RadioButton
                    android:id="@+id/rdoMan"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="남자"
                    android:fontFamily="@font/kor2"
                    android:textSize="15sp"/>
                <RadioButton
                    android:id="@+id/rdoWoman"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="여자"
                    android:fontFamily="@font/kor2"
                    android:textSize="15sp"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_margin="5dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="나이 :         "
                android:fontFamily="@font/kor2"/>
            <EditText
                android:id="@+id/RegiEdtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="10dp" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_margin="5dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="선호장르 : "
                android:fontFamily="@font/kor2"/>
            <Spinner
                android:id="@+id/RegiGenre"
                android:layout_width="200dp" android:layout_height="wrap_content"
                android:entries="@array/genre"
                android:gravity="center"
                android:padding="10dp">
            </Spinner>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnRegist"
                android:layout_width="40dp" android:layout_height="40dp"
                android:src="@drawable/ok"
                android:scaleType="fitXY"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:layout_margin="30dp"/>
            <ImageButton
                android:id="@+id/btnCancel"
                android:layout_width="40dp" android:layout_height="40dp"
                android:src="@drawable/delete"
                android:scaleType="fitXY"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:layout_margin="30dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
